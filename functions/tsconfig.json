    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["ES2020.Promise", "ES2019"],
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules/*"
  ]
}
