{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    // Has to be enabled for airtable@0.10
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2017",
    "lib": ["ES2020.Promise", "ES2019", "DOM"],
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules/*"
  ]
}
